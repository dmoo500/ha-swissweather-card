{
  "name": "ha-swissweather-card",
  "version": "1.3.0",
  "description": "Home Assistant custom card recreating the SwissWeather app experience - optimized for HA 2025.8+",
  "main": "dist/swissweather-card.js",
  "homepage": "https://github.com/your-username/ha-swissweather-card",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/ha-swissweather-card.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/ha-swissweather-card/issues"
  },
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "serve": "python3 -m http.server 8000",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/ --ext .ts,.js",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "yarn build",
    "validate": "yarn type-check && yarn lint && yarn format:check",
    "validate:hacs": "./scripts/validate-hacs.sh",
    "release": "yarn validate && yarn build"
  },
  "keywords": [
    "home-assistant",
    "hacs",
    "custom-card",
    "lovelace",
    "weather",
    "switzerland",
    "meteoswiss",
    "typescript",
    "lit-element"
  ],
  "author": {
    "name": "SwissWeather Card Contributors",
    "url": "https://github.com/your-username/ha-swissweather-card/graphs/contributors"
  },
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=4.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.21.3",
    "eslint-plugin-promise": "^7.2.1",
    "prettier": "^3.3.0",
    "tslib": "^2.6.3",
    "typescript": "^5.4.5",
    "vite": "^7.1.2"
  },
  "dependencies": {
    "@mdi/js": "^7.4.47",
    "custom-card-helpers": "^1.9.0",
    "lit": "^3.1.4",
    "lit-translate": "^2.0.1",
    "marked": "^16.2.0"
  },
  "files": [
    "dist/",
    "hacs.json",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "packageManager": "yarn@4.9.2",
  "dependenciesMeta": {
    "lit-translate@2.0.1": {
      "unplugged": true
    }
  }
}
