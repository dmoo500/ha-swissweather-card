{
  "name": "ha-swissmeteo-card",
  "version": "1.0.0",
  "description": "Home Assistant custom card recreating the SwissMeteo app experience - optimized for HA 2025.8+",
  "main": "dist/swissmeteo-card.js",
  "homepage": "https://github.com/your-username/ha-swissmeteo-card",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/ha-swissmeteo-card.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/ha-swissmeteo-card/issues"
  },
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/ --ext .ts,.js",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "yarn build",
    "validate": "yarn type-check && yarn lint && yarn format:check",
    "validate:hacs": "./scripts/validate-hacs.sh",
    "release": "yarn validate && yarn build"
  },
  "keywords": [
    "home-assistant",
    "hacs",
    "custom-card",
    "lovelace",
    "weather",
    "switzerland",
    "meteoswiss",
    "typescript",
    "lit-element"
  ],
  "author": {
    "name": "SwissMeteo Card Contributors",
    "url": "https://github.com/your-username/ha-swissmeteo-card/graphs/contributors"
  },
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=4.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/node": "^20.14.0",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.0",
    "rollup": "^4.18.0",
    "tslib": "^2.6.3",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "custom-card-helpers": "^1.9.0",
    "lit": "^3.1.4"
  },
  "files": [
    "dist/",
    "hacs.json",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "packageManager": "yarn@4.3.1"
}
